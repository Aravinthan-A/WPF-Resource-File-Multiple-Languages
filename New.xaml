<Window x:Class="LangMultiple.New"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangMultiple"
         xmlns:lang="clr-namespace:LangMultiple.Property.Language"
        mc:Ignorable="d"
        Title="New" Height="450" Width="800">
    <StackPanel>
        <Label Margin="0,20,0,0" Height="42" Content="{x:Static lang:Resource.mail}" FontSize="20" Width="200"></Label>
        <Label Width="400" Margin="250,100,500,0" Height="37" x:Name="lblname" FontSize="14"></Label>
        <Button Width="100" Height="27" Margin="0,100,0,0" Content="{x:Static lang:Resource.next}" FontSize="16" Click="Button_Click"></Button>

    </StackPanel>
</Window>
